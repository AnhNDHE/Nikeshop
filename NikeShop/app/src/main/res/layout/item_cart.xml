<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="28dp"
    app:cardElevation="6dp"
    android:layout_marginBottom="24dp"
    android:layout_marginTop="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:backgroundTint="#F7F7F7"
    app:cardBackgroundColor="#FFF">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="28dp"
            android:gravity="center_vertical">
            <ImageView
                android:id="@+id/img_cart_product"
                android:layout_width="120dp"
                android:layout_height="100dp"
                android:src="@drawable/shoes1"
                android:scaleType="fitCenter"
                android:layout_marginEnd="24dp" />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center_vertical">
                <TextView
                    android:id="@+id/tv_cart_product_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tên sản phẩm"
                    android:textStyle="bold"
                    android:textSize="24sp"
                    android:layout_marginBottom="8dp"
                    android:textColor="#222" />
                <TextView
                    android:id="@+id/tv_cart_product_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$0.00"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:layout_marginBottom="8dp"
                    android:textColor="#444" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp">
                    <TextView
                        android:id="@+id/btn_minus"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:text="-"
                        android:background="@drawable/qty_btn_bg"
                        android:textColor="#444"
                        android:textSize="20sp"
                        android:gravity="center"
                        android:padding="0dp"
                        android:textStyle="bold"
                        android:layout_marginEnd="4dp" />
                    <TextView
                        android:id="@+id/tv_quantity"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:text="1"
                        android:gravity="center"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:background="#FFF"
                        android:textColor="#222"
                        android:layout_marginEnd="4dp"
                        android:layout_marginStart="4dp" />
                    <TextView
                        android:id="@+id/btn_plus"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:text="+"
                        android:background="@drawable/qty_btn_bg_selected"
                        android:textColor="#FFF"
                        android:textSize="20sp"
                        android:gravity="center"
                        android:padding="0dp"
                        android:textStyle="bold"
                        android:layout_marginStart="4dp" />
                    <ImageView
                        android:id="@+id/btn_delete"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_trash"
                        android:background="@android:color/transparent"
                        android:contentDescription="Delete"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="0dp"
                        android:scaleType="centerInside"
                        android:padding="0dp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
