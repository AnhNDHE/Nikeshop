<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/primary_orange</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/primary_orange</item>
        <item name="android:windowBackground">@color/background_light</item>
    </style>

    <!-- Text Styles -->
    <style name="TextHeadline">
        <item name="android:textSize">@dimen/text_headline</item>
        <item name="android:textColor">@color/primary_dark</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextHeadingMedium">
        <item name="android:textSize">@dimen/text_heading_medium</item>
        <item name="android:textColor">@color/primary_dark</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextHeadingSmall">
        <item name="android:textSize">@dimen/text_heading_small</item>
        <item name="android:textColor">@color/primary_dark</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextTitleBold">
        <item name="android:textSize">@dimen/text_title_bold</item>
        <item name="android:textColor">@color/primary_dark</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextBody">
        <item name="android:textSize">@dimen/text_body</item>
        <item name="android:textColor">@color/primary_dark</item>
    </style>

    <style name="TextBody2">
        <item name="android:textSize">@dimen/text_body_2</item>
        <item name="android:textColor">@color/gray_medium</item>
    </style>

    <style name="TextBody3">
        <item name="android:textSize">@dimen/text_body_3</item>
        <item name="android:textColor">@color/gray_medium</item>
    </style>

    <!-- Button Styles -->
    <style name="ButtonPrimary" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/button_primary_bg</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_title_bold</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ButtonSecondary" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/button_secondary_bg</item>
        <item name="android:textColor">@color/primary_orange</item>
        <item name="android:textSize">@dimen/text_title_bold</item>
    </style>
</resources>